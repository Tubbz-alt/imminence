<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %></title>
<%= stylesheet_link_tag '/stylesheets/formtastic.css', '/stylesheets/formtastic_changes.css', '/stylesheets/admin/jquery-ui-1.8.14.css' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="wrapper" class="wrapper">

    <div class="content" role="main">

      <% [:notice, :alert].select { |k| flash[k].present? }.each do |k| %>
        <p class="flash-<%= k %>">
          <%= flash[k] %>
        </p>
      <% end %>

      <% unless current_page?(admin_root_path) %>
        <p class="return"><%= link_to 'Return to dashboard', admin_root_path %></p>
      <% end %>


      <%= yield %>

      <script type="text/javascript" charset="utf-8" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
      <%= javascript_include_tag '/imminence-assets/javascripts/jquery-ui-1.8.14.custom.min.js' %>
      <%= yield :extra_javascript %>
    </div>

  </div>

</body>
</html>
